@model AppStore.Models.Customer.Customer
@{
    ViewBag.Title = "Edit Customer";
}

<h2>Edit Customer Information</h2>

<div>@Html.ActionLink("Add App to Customer", "AddAppToCustomer", new { custId = Model.Id }, null)</div>

@using (Html.BeginForm("Edit", "Customer", FormMethod.Post))
{
    <div>@Html.HiddenFor(x => x.Id)</div>
    
    <div>
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name)
    </div>
    <div>
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div>
        @Html.LabelFor(x => x.EmailAddress)
        @Html.TextBoxFor(x => x.EmailAddress)
    </div>
    <div>
        @Html.ValidationMessageFor(x => x.EmailAddress)
    </div>

    <div>
        @Html.LabelFor(x => x.Number)
        @Html.TextBoxFor(x => x.Number)
    </div>

    <div>
        @Html.LabelFor(x => x.Active)
        @Html.CheckBoxFor(x => x.Active)
    </div>

    <input type="submit" value="Submit" />

}

<div>
    @{ Html.RenderAction("GetCustomerApps", "Customer", new { custId = Model.Id }); }
</div>

